<%- include("partials/header.ejs") %>

<!-- Full Page Image Header with Vertically Centered Content -->
<section class="first">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="teste col-12 text-center">
        <div data-tilt data-tilt-scale="1.1" class="logo">
          <img src="/assets/fbLogo.png" href="/">
        </div>

        <p class="lead">Gym routine and better eating habits.</p>

        <div class="regForm">
          <main class="form-signin">
            <h1 class="h3">Sign In</h1>

            <form action="/submit" method="POST">
              <div class="form-floating mb-3">
                <input type="username" name="username" class="form-control" id="floatingInput" placeholder="Username" required>
                <label for="floatingInput">Email</label>
              </div>

              <div class="form-floating mb-3">
                <input type="password" name="password" class="form-control" id="floatingInput" placeholder="Password" required>
                <label for="floatingInput">Password</label>
              </div>

              <button class="w-100 btn btn-primary" type="submit">Sign up</button>
            </form>
          </main>
        </div>

      </div>
    </div>
  </div>
</section>

<%- include("partials/footer.ejs") %>
